<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subjectName"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/assi_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment title"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/upload_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upload_date"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/submission_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission date"
                android:textColor="@color/red"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Div"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/sem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sem"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/feulty_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission date"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_bg">

                <ImageView
                    android:id="@+id/assi_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_twotone_delete_24"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/download_border"
                    android:padding="7dp"
                    android:layout_marginEnd="10dp"
                    android:text="Download"
                    android:textColor="@color/blue"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>